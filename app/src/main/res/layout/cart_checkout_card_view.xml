<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parents"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_of_food_in_cart_act"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/pop_1" />


    <TextView
        android:id="@+id/txt_title_of_food_in_cart_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/img_of_food_in_cart_act"
        android:fontFamily="@font/poppins_bold"
        android:text="Title"
        android:textColor="@color/dark_bleu"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title_of_food_in_cart_activity"
        android:layout_toEndOf="@id/img_of_food_in_cart_act">

        <LinearLayout
            android:id="@+id/lin_lyt_inc_dec_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_add_quantity_of_food_in_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/background_btn_orange_without_radius"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22.5dp" />

            <TextView
                android:id="@+id/txt_quantity_of_food_in_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22.5dp" />

            <TextView
                android:id="@+id/txt_minus_quantity_of_food_in_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/background_btn_orange_without_radius"
                android:fontFamily="@font/poppins_medium"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22.5dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/txt_price_of_multiple_item_in_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="200"
                android:textColor="@color/dark_bleu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text=" DZD"
                android:textColor="@color/main_orange" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_lyt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/txt_price_of_single_item_in_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:alpha="0.7"
            android:fontFamily="@font/poppins_bold"
            android:text="200"
            android:textColor="@color/dark_bleu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:alpha="0.7"
            android:fontFamily="@font/poppins_bold"
            android:text=" DZD"
            android:textColor="@color/main_orange" />
    </LinearLayout>


</RelativeLayout>

