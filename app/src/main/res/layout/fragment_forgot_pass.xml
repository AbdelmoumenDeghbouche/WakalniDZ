<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ForgotPassFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundAct"
        tools:context=".Activities.ForgetPasswordActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:src="@drawable/ic_wakalni_first_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_description"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Forgot password"
            android:textColor="@color/black"
            android:textSize="30dp" />


        <TextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_email_address"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/sk_modernist_regular"
            android:text='Enter your phone number to request a\n password reset.'
            android:textAlignment="center"
            android:textColor="#3D3D3D"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_email_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edt_phone_rest_pass"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Phone Number"
            android:textColor="#3D3D3D"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edt_phone_rest_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="669091303"
            android:layout_centerInParent="true"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="21dp"
            android:background="@drawable/edit_text_style"
            android:fontFamily="@font/sk_modernist_regular"
            android:hint="Enter your phone"
            android:inputType="phone"
            android:maxLines="1"
            android:padding="23dp"
            android:textColor="#AAACAE"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/txt_send_code"
            android:layout_height="50dp"
            android:layout_below="@id/edt_phone_rest_pass"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_btn_orange"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Send Code"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txt_login_to_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/sk_modernist_bold"
            android:paddingStart="5dp"
            android:text="Login to my account"
            android:textColor="#FE554A"
            android:textSize="16sp" />
    </RelativeLayout>

</FrameLayout>